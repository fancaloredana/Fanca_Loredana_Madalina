@page
@model Fanca_Loredana_Madalina.Pages.PG_Candidati.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Candidati</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Candidati.ID" />
            <div class="form-group">
                <label asp-for="Candidati.Nume_Prenume" class="control-label"></label>
                <input asp-for="Candidati.Nume_Prenume" class="form-control" />
                <span asp-validation-for="Candidati.Nume_Prenume" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Candidati.GDPR" /> @Html.DisplayNameFor(model => model.Candidati.GDPR)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Candidati.Documente" class="control-label"></label>
                <input asp-for="Candidati.Documente" class="form-control" />
                <span asp-validation-for="Candidati.Documente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidati.RolID" class="control-label"></label>
                <select asp-for="Candidati.RolID" class="form-control" asp-items="ViewBag.RolID"></select>
                <span asp-validation-for="Candidati.RolID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
